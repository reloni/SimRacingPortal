    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run frontend",
            "type": "shell",
            "command": "lsof -i :9000 -sTCP:LISTEN | awk 'NR > 1 {print $2}'| xargs kill -15 && swift run Frontend serve --port 9000 --env development",
            "group": "build",
            "problemMatcher": [],
            "runOptions": {
                "instanceLimit": 2
            }
        }
    ]
}